{% extends 'base.html.twig' %}

{% block title %}Artist index{% endblock %}

{% block body %}
    <div class="container">
        <h1>Artist index</h1>
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for artist in artists %}
                <tr>
                    <td>{{ artist.id }}</td>
                    <td>{{ artist.name }}</td>
                    <td>
                        <a href="{{ path('app_web_artist_show', {'id': artist.id}) }}" class="btn btn-outline-primary">show</a>
                        <a href="{{ path('app_web_artist_edit', {'id': artist.id}) }}" class="btn btn-outline-secondary">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <a href="{{ path('app_web_artist_new') }}">Create new</a>
    </div>
{% endblock %}
