{% extends 'base.html.twig' %}

{% block title %}Album{% endblock %}

{% block body %}
    <div class="container d-flex justify-content-center">
        <div class="col-4 mt-5">
            <h1>Album</h1>
            <table class="table">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ album.id }}</td>
                    </tr>
                    <tr>
                        <th>Name</th>
                        <td>{{ album.name }}</td>
                    </tr>
                    <tr>
                        <th>Year</th>
                        <td>{{ album.year }}</td>
                    </tr>
                </tbody>
            </table>
            <a href="{{ path('app_web_album_index') }}">back to list</a>
            <a href="{{ path('app_web_album_edit', {'id': album.id}) }}">edit</a>
            {{ include('web/album/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
