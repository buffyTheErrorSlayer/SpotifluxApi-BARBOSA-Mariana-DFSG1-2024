{% extends 'base.html.twig' %}

{% block title %}Track{% endblock %}

{% block body %}
    <div class="container d-flex justify-content-center">
        <div class="col-4 mt-5">
            <h1>Track</h1>
            <table class="table">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ track.id }}</td>
                    </tr>
                    <tr>
                        <th>Title</th>
                        <td>{{ track.title }}</td>
                    </tr>
                    <tr>
                        <th>Duration</th>
                        <td>{{ track.duration }}</td>
                    </tr>
                </tbody>
            </table>
            <a href="{{ path('app_web_track_index') }}">back to list</a>
            <a href="{{ path('app_web_track_edit', {'id': track.id}) }}">edit</a>
            {{ include('web/track/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
